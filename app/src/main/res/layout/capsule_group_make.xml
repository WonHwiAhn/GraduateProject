<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">
        <EditText
            android:background="@null"
            android:id="@+id/capsuleGroupTitle"
            android:gravity="center"
            android:hint="타임캡슐의 제목을 입력해주세요."
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:background="@null"
            android:id="@+id/capsuleGroupLetter"
            android:gravity="center"
            android:hint="타임캡슐에 저장할 글을 입력해주세요."
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="0.99" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/groupImgView"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/groupGallery"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/gallery"/>
            <Button
                android:id="@+id/groupCamera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/camera"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/calendar"/>

            <Button
                android:id="@+id/groupMake"
                android:layout_marginLeft="200dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/save_capsule"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>